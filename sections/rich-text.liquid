<div class="page-width">
  <div class="section-block section-block--padding grid grid--no-gutters">
    <div class="grid__item{% unless section.settings.home_page_full_width %} medium-up--two-thirds medium-up--push-one-sixth{% endunless %}">
      {% if section.settings.section_title != blank %}
        <h2 class="rich-text__heading--{{ section.settings.text_size }} text-center">{{ section.settings.section_title | escape }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="rte text-center rich-text__text--{{ section.settings.text_size }}">
          {{ section.settings.text }}
        </div>
      {% endif %}
    </div>
  </div>
</div>



